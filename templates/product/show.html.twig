{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - La boutique Beninoise{% endblock %}

{% block content %}
    <h1>{{ product.name }}</h1>

    <div class="row">

            <div class="col-md-4 ">
                <img src="/uploads/{{ product.illustration}}" alt="{{ product.name }}" class="img-fluid">
            </div>
            <div class="col-md-7 my-auto">
               <h3>{{ product.name }}</h3>
                <p>{{ product.subtitle }}</p>
                <span class="product-page-price">{{ (product.price /100)|number_format(2, ',' , '.') }} â‚¬</span>
                <hr>
                <p>{{ product.description }}</p>
                <hr>
                <a href="{{ path('add_to_app_cart',{'id':product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
            </div>
    </div>
    <hr>
    <h3>Nos meilleures ventes</h3>
    <p>Decouvrez les articles les plus vendus</p>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                {% include "product/single_product.html.twig" %}
            </div>
        {% endfor %}
    </div><!-- /.row -->

{% endblock %}
