{% extends 'base.html.twig' %}

{% block title %}Nos produits - La boutique Beninoise{% endblock %}

{% block content %}
    <h1>Nos produits</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4 product-container">
                <div class="product-item text-center">
                    <img src="/uploads/{{ product.illustration}}" alt="{{ product.name }}" class="img-fluid">
                    <h5>{{ product.name }}</h5>
                    <span  class="product-subtitle"> {{ product.subtitle }}</span> <br>
                    <span class="product-price"> {{ (product.price /100)|number_format(2, ',' , '.') }} â‚¬ </span>
                </div>

            </div>
        {% endfor %}
    </div>


{% endblock %}
